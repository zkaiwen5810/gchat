ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

.PHONY: clean prebuild

SHELLTYPE := posix
ifeq (.exe,$(findstring .exe,$(ComSpec)))
	SHELLTYPE := msdos
endif

# Configurations
# #############################################

ifeq ($(origin CC), default)
  CC = clang
endif
ifeq ($(origin CXX), default)
  CXX = clang++
endif
ifeq ($(origin AR), default)
  AR = ar
endif
INCLUDES += -ISource -Ivendor/GameNetworkingSockets/include -I../../Walnut/Source -I../../vendor/imgui -I../../vendor/glfw/include -I../../vendor/glm -I../../vendor/spdlog/include -IPlatform/Linux
FORCE_INCLUDE +=
ALL_CPPFLAGS += $(CPPFLAGS) -MD -MP $(DEFINES) $(INCLUDES)
ALL_RESFLAGS += $(RESFLAGS) $(DEFINES) $(INCLUDES)
LIBS +=
LDDEPS +=
ALL_LDFLAGS += $(LDFLAGS) -L/usr/lib64 -m64
LINKCMD = $(AR) -rcs "$@" $(OBJECTS)
define PREBUILDCMDS
endef
define PRELINKCMDS
endef
define POSTBUILDCMDS
endef

ifeq ($(config),debug)
TARGETDIR = ../../bin/Debug-linux-x86_64/Walnut-Networking
TARGET = $(TARGETDIR)/libWalnut-Networking.a
OBJDIR = ../../bin-int/Debug-linux-x86_64/Walnut-Networking
DEFINES += -DWL_HEADLESS -DWL_PLATFORM_LINUX -DWL_DEBUG
ALL_CFLAGS += $(CFLAGS) $(ALL_CPPFLAGS) -m64 -g
ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -m64 -g -std=c++20

else ifeq ($(config),release)
TARGETDIR = ../../bin/Release-linux-x86_64/Walnut-Networking
TARGET = $(TARGETDIR)/libWalnut-Networking.a
OBJDIR = ../../bin-int/Release-linux-x86_64/Walnut-Networking
DEFINES += -DWL_HEADLESS -DWL_PLATFORM_LINUX -DWL_RELEASE
ALL_CFLAGS += $(CFLAGS) $(ALL_CPPFLAGS) -m64 -O2 -g
ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -m64 -O2 -g -std=c++20

else ifeq ($(config),dist)
TARGETDIR = ../../bin/Dist-linux-x86_64/Walnut-Networking
TARGET = $(TARGETDIR)/libWalnut-Networking.a
